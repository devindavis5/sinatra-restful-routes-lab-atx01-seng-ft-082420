<h1>Revise A Recipe</h1>
<form action="/recipes/<%=@recipe.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value= "PATCH">
    <label for="name">Name:</label>
    <input id="name" type="text" value="<%=@recipe.name%>" name="recipe[name]">
    <br>
    <label for="ingredients">Ingredients:</label>
    <input id="ingredients" type="text" value="<%=@recipe.ingredients%>" name="recipe[ingredients]">
    <br>
    <label for="cook_time">Cook Time:</label>
    <input id="cook_time" type="text" value="<%=@recipe.cook_time%>" name="recipe[cook_time]">
    <br>
    <input type="submit" value="Submit">
    </form>